<div class="_chalkler col-xs-12 col-sm-6 col-lg-4">

  <div class="avatar32" style="background-color: <%= provider_admin.provider.header_color if provider_admin.avatar.blank? %>">
    <div class="img" style="background-image: url(<%= provider_admin.avatar %>)"></div>
  </div> 

  <div class="chalkler_name">
   <% if policy(provider_admin).edit? %>
      <%= link_to provider_admin.name, edit_provider_admin_path(provider_admin.path_params) %>
    <% else %>
      <%= link_to provider_admin.name, provider_admin_path(provider_admin.path_params) %>
    <% end %>
  </div>

</div>