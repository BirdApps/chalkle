<div class="course-show">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-2">
      <div class="text-right pull-right" style="width:20%;">
        <div class="social-links">
          <%= link_to image_tag("/assets/icons/facebook.png"), "#", class: 'facebook-share' %>
          <%= link_to image_tag("/assets/icons/twitter.png"), "//twitter.com"  %>
          <%= link_to image_tag("/assets/icons/email.png"), "mailto:hello@chalkle.com"  %>
        </div>
        <div class="join-link">
          <a href="<%= new_course_booking_path @course.id %>" class="bg-colour<%= @course.best_colour_num %> btn btn-default">
            JOIN NOW
          </a>
        </div>
      </div>

      <%= @course.do_during_class %>
      <br /><br />
      <small>
        <%= @course.learning_outcomes %>
      </small>
    </div>
  </div>
</div>