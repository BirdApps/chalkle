<div class="course-show">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="right-col">
        <div class="social-links">
          <%= link_to image_tag("/assets/icons/facebook.png"), "#", class: 'facebook-share' %>
          <a href="//twitter.com/share?url=<%=u course_tiny_url(@course.id)%>&text=<%=u  @course.name+'@chalklenz #alwaysbelearning' %>" target="_blank">
           <%= image_tag("/assets/icons/twitter.png") %>
          </a>
          <a href="mailto:hello@chalkle.com?subject=<%=u "I think you'll like this course on Chalkle" %>&body=<%=u 'Check out "'+@course.name+'" at '+course_tiny_url(@course.id) %>" target="_blank">
           <%= image_tag("/assets/icons/email.png") %>
          </a>
        </div>
        <div class="join-link">
          <a href="<%= new_course_booking_path @course.id %>" class="bg-colour<%= @course.best_colour_num %> btn btn-default">
            JOIN NOW
          </a>
        </div>
        <div class=" small light grey">
          <% if @course.limited_spaces?  %>
            <%= @course.spaces_left? ? @course.spaces_left.to_s+" spots left" : "Booked out" %> 
          <% end %>
        </div>
        <br />
        <div class="meta clearfix">
          <% if false #@course.has_reviews %> 
            <div class="reviews small grey">
              <span class="fa fa-heart"></span>
              <span class=" text-right">
                <%= @course.review_percent || '?' %>%
              </span>
              <div class="small">
                <%= @course.reviews.count %> reviews
              </div>
            </div>
          <% end  %>
          <div class="cost">
            <% if @course.cost? %>
              $<%= @course.cost %>
            <% else %>
              FREE
            <% end %>
          </div>
        </div>
      </div>
      <%= @course.do_during_class %>
      <br /><br />
      <small>
        <%= @course.learning_outcomes %>
      </small>
    </div>
  </div>
  <br /> <br />
  <div class="row">
    <div class="col-sm-3 col-sm-offset-1 col-xs-6 clearfix">
      <% if @course.teacher.present? %>
        <%= link_to @course.teacher do %>
          <div class="teacher">
            <div class="img" style='background-image: url(<%= @course.teacher.avatar %>)'>
            </div>
            <div class="light grey upper small">Your Teacher</div>
            <%= @course.teacher.name %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-sm-4 hidden-xs small grey light pad-top">
      <a href="#map-canvas"
        <span class="fa fa-map-marker"></span>
        <%= @course.address || @course.venue %>
      </a>
    </div>
    <div class="col-sm-3 col-xs-6 small grey light pad-top">
      <span class="fa fa-calendar"></span>
      <%= day_ordinal_month @course.start_at %>
      <br />
      <span class="fa fa-clock-o"></span>
      <%= @course.hours %> hours - 
      <%= pretty_time_range @course.start_at, @course.end_at %>
    </div>
  </div>
  <br /> <hr /><br />
  <div class="row">
      <div class="map-wrap"> 
        <div class="col-sm-6 col-xs-12 map-overlay">
          <div class="col-xs-12 xol-sm-10 col-sm-offset-2">
            <p class="grey light">
              <%= @course.venue_truncated %>
            </p>
            <p class="grey light hidden-xs">
              <%= @course.address_formatted %>
            </p>
            <p class="grey light visible-xs">
              <%= @course.address %>
            </p>
          </div>
        </div>
        <div class="col-xs-12">
          <input type="hidden" id="longitude" value="<%= @course.longitude %>" />
          <input type="hidden" id="latitude" value="<%= @course.latitude %>" />
          <div id="map-canvas"></div>
        </div>

      </div>
  </div>
  <br /> <br />
  <div class="row">
    <div class="col-md-5 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 light small">
      <% if @course.prerequisites.present?  %>
        <h5 class="upper">Be sure to bring</h5>
        <p>
          <%= @course.prerequisites %>
        </p>
      <% end %>
    </div>
    <div class="col-md-5 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-12 light small">
      <% if @course.suggested_audience.present?  %>
        <h5 class="upper">This class us suitable for</h5>
        <p>
          <%= @course.suggested_audience %>
        </p>
      <% end %>
    </div>
  </div>
 <br class="hidden-sm hidden-xs" /><br class="hidden-xs hidden-sm" />
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12 light small">
      <% if @course.additional_comments.present?  %>
        <h5 class="upper">Additional information</h5>
        <p>
          <%= @course.additional_comments %>
        </p>
      <% end %>
    </div>
  </div>
</div>