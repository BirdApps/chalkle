<div class="_course col-xs-12 col-sm-6 col-lg-4">
  <div class="_inner_course">
    
    <div onclick="window.location = $(this).data('href')"
    data-href="<%= provider_course_path(course.path_params) %>" class="avatar" style="background-color: <%= course.provider.header_color if course.course_upload_image.blank? %>">
      <div class="img" style="background-image: url(<%= course.course_upload_image %>)"></div>
      <div class="course_title">
        <div class="col-xs-12 flush">
          <div class="class_date">
            <% if course.start_at  %>
                <%= day_ordinal_month course.start_at, true, false, true, true %>
            <% else %>
                Not scheduled
            <% end %>
          </div>
          <a class="cost grad_btn" href="<%= new_provider_course_booking_path course.path_params %>" title="Book Now">
            <%= course.cost_formatted true %>
          </a>
        </div>
        
        <%= link_to limit_text(course.name, 40), provider_course_path(course.path_params) %>
      </div>
    </div>

    <div class="details inline col-xs-12">
      <div class="col-xs-6 flush">
        <%= render partial: 'providers/provider_small', locals: { provider: course.provider } %>
      </div>
        <div class="col-xs-6 flush">
        <%= render partial: 'provider_teachers/provider_teacher_small', locals: { provider_teacher: course.teacher } %>
      </div>
    </div>
  </div>
</div>