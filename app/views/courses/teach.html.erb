          <h3>Providers</h3>
          <hr />
        </div>
        <div class="row col-xs-12">
          <%= render partial: '/me/providers/provider', collection: current_user.providers_adminable %>  
        </div>
      <% end %>
    </div>

    <div class="col-sm-6 col-xs-12">
      <div class="fancy-header">
        <h3>Teacher Profiles</h3>
        <hr />
      </div>
      <% if current_chalkler.provider_teachers.any? %>
        <div class="col-xs-12">
          <%= render partial: '/me/provider_teachers/provider_teacher', collection: current_chalkler.provider_teachers %>  
        </div>
      <% else %>
        <div class="alert alert-default center small light">
          You don't have any teacher profiles. Go to a provider you adminstrate, click 'Settings', then 'Manage Teachers'.
