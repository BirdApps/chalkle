<div class="row">

  <div class="col-md-10 text-center">
    Already know what you are doing?  <%= link_to "Create a Class", new_course_path, html_class: "btn" %>
  </div>

</div>

<div class="row">

  <% if current_user.channels_adminable.any? %>
    <div class="fancy-header">
      <h3>Your Providers</h3>
      <hr />
    </div>
    <div class="row col-xs-12">
      <%= render partial: '/me/channels/channel', collection: current_user.channels_adminable %>  
    </div>
  <% end %>

</div>


<div class="row">

  <div class="col-xs-12 col-md-6">
    <% 
    teaching = current_chalkler.channel_teachers.map(&:courses).flatten
    if teaching.any?
    %>
      <div class="fancy-header">
        <h3>Classes you are Teaching</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render partial: '/me/courses/course', collection: teaching %>  
      </div>
    <% end %>
  </div>
  <% if current_chalkler.channel_teachers.any? %>
    <div class="col-xs-12 col-md-6">

      <div class="fancy-header">
        <h3>Your Teacher Profiles</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render partial: '/me/channel_teachers/channel_teacher', collection: current_chalkler.channel_teachers %>  
      </div>
    </div>
  <% end %>


</div>




