%table
  %thead
    %tr
      %th Name
      %th Email
      %th Guests
      %th Status
      %th Cost
      %th Paid
      %th Answers
      %th Booking
  %tbody
    -bookings.each do |b|
      %tr
        %td= link_to b.chalkler.name, admin_chalkler_path(b.chalkler)
        - if b.chalkler.email.present?
          %td= mail_to b.chalkler.email
        - else
          %td= link_to b.chalkler.meetup_id, "http://www.meetup.com/sixdegrees/message/?recipientId=#{b.chalkler.meetup_id}"  
        %td= b.guests
        %td= b.status
        %td= b.cost
        %td= b.paid
        %td= b.meetup_data["answers"].join('<br/>') if b.meetup_data["answers"].present?
        %td= link_to 'View', admin_booking_path(b)

