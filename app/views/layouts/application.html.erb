<!DOCTYPE html>
<html lang="en">
  <head>
    <%= analytics_init if Rails.env.production? %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=0">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <title> 
      <%# content_for?(:title) ? yield(:title) : 'chalkle°' %>
      <%= strip_tags "#{meta_title} chalkle°" %>
    </title>
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= typekit_includes %>
  </head>

  <body class="<%= body_class %> v2" role="document" style="background-color: <%= header_color ? header_color : 'rgba(76, 126, 147, 1)' %>;">
     <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : <%= Facebook.keys[:app_id] %>,
          xfbml      : true,
          version    : 'v2.1'
        });
      };

      (function(d, s, id){
         var js, fjs = d.getElementsByTagName(s)[0];
         if (d.getElementById(id)) {return;}
         js = d.createElement(s); js.id = id;
         js.src = "//connect.facebook.net/en_US/sdk.js";
         fjs.parentNode.insertBefore(js, fjs);
       }(document, 'script', 'facebook-jssdk'));
    </script>
    <div id="fb-root"></div>
    <header>
      <%= render 'layouts/navigation' %>
      <%= render 'layouts/header' %>
    </header>
    <div id="wrapper">
      <div class="container" role="main">
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    </div>
    <% #render 'layouts/footer' %> 
    <script src="//maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
    

  </body>
  </html>
