<div class="header" style="background-image: url( <%= page_hero %> )">
  <div class="container header_content col-xs-12">
    <div class="header_content_bg_wrapper">
      <div class="header_content_bg" style="background-image: url( <%= page_hero_blur %> )">
      </div>
    </div>
    <% if title = page_title %>
      <div class="title col-sm-offset-2 col-sm-10">
        <em><%= page_subtitle %></em>
        <h1>
          <%= title %>
        </h1>
      </div>
      <%= render 'layouts/navigation_secondary' %>
    <% end %>
  </div>
  <%= render "layouts/navigation_admin" %>
</div>
