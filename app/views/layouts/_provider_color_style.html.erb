<% if @header_color %>
  <style>
    @media screen and (min-width: 769px){
      .provider_color,.dropdown-menu, .dropdown-menu ul, .navbar  {
        background-color: <%=  @header_color %> !important;
      }
    }
    @media screen and (max-width: 768px){
      .provider_color,.dropdown-menu, .dropdown-menu ul, .navbar  {
        background-color: <%=  @header_color_opaque %> !important;
      }
    }
  </style>
<% end %>