<html>
  <head>
    <%= analytics_init if Rails.env.production? %>
    <%= render 'layouts/meta' %>
    <meta name="viewport" content="width=device-width, user-scalable=no">

    <title>
      <%= content_for?(:title) ? yield(:title) : 'chalkle°' %>
    </title>
    <link rel='shortcut icon' type='image/x-icon' href='/favicon.ico' />
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "partners" %>

    <%= typekit_includes %>
  
  </head>

  <body class="<%= body_class %> tk-proxima-nova" id="partners-page">


    <header id="header" class="" >
      <h1 class="tk-proxima-nova" ><%=h @hero_text %></h1>
      <div class="navbar-wrapper">
        <nav class="navbar navbar-fixed-top">
          <div class="navbar-header col-md-2">
            <button class="navbar-toggle" data-target="#primary-naviation" data-toggle="collapse" type="button">
              <span class="sr-only Toggle navigation"></span>
              <span class="fa fa-bars"></span>
            </button>
            <%= link_to root_path, class:"navbar-brand", alt: "chalkle°" do%>
              <%= image_tag asset_path('partners/chalkle@2x.png'), class: "logo" %>
            <% end %>
          </div>
          <div class="col-sm-2 col-md-1 hidden-xs pull-right"></div>
          <div id="primary-naviation" class="pull-right collapse navbar-collapse">
            <%= render 'layouts/partners_navigation' %>
          </div>
        </nav>
      </div>
    </header>
    <div id="">

      <div id="header-mask">
        <div class="mask"></div>
        <div class="arrows-mask-left"></div>
        <div class="arrows-mask-right"></div>
        <div class="mask"></div>
      </div>

      <div id="main">

        <div class="container">
          <%= render 'layouts/messages' %>
        </div>

        <%= yield %>

      </div>

      <footer id="footer" class=""></footer>

    </div> 


  </body>
</html>
