<html>
  <head>
    <%= analytics_init if Rails.env.production? %>
    <meta charset='utf-8' />
    <title>
      <%= content_for?(:title) ? yield(:title) : 'chalkleÂ°' %>
    </title>
    <link rel='shortcut icon' type='image/x-icon' href='/favicon.ico' />
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= stylesheet_link_tag "unsemantic/unsemantic-grid-base" %>
    <%= stylesheet_link_tag "unsemantic/unsemantic-grid-responsive" %>

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "partners" %>

    <%= javascript_include_tag "adapt.min" %>

    <script type="text/javascript" src="//use.typekit.net/hlu7uvf.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body class="<%= body_class %> tk-proxima-nova">
    <header id="header" class="" data-0="margin-top:0;  opacity: 1.0" data-500=" margin-top:-350px; opacity: 0;">
      <h1 class="tk-proxima-nova" data-0="margin-top: 350px;" data-500="margin-top: 480px;"><%=h @hero_text %></h1>
    </header>
    <nav class=""  
      data-300="padding: 20px 0;
      background-color: rgba(30,30,30,0); box-shadow: 0 3px 5px rgba(0,0,0,0.0);"
      data-550="padding: 10px 0;
      background-color: rgba(80, 80,80,0.94); box-shadow: 0 0px 2px rgba(0,0,0,0.2);"

    >
      <div class="grid-container">
      <div class="grid-20 logo-container">
        <%= image_tag( asset_path('partners/chalkle@2x.png'), width: 153, height: 38 ) %>
      </div>
      <div  class="grid-80">
        <%= render 'layouts/partners_navigation' %>
        </div>
      </div>
    </nav>

    <div id="header-mask">
      <div class="mask"></div>
      <div class="arrows-mask-left"></div>
      <div class="arrows-mask-right"></div>
      <div class="mask"></div>
    </div>

    <div id="main">

      <div class="container">
        <%= render 'layouts/messages' %>
      </div>

      <%= yield %>

    </div>

    <%= javascript_include_tag "skrollr.min" %>
    <script type="text/javascript">
    var s = skrollr.init({ forceHeight: false });
    </script>


    <footer id="footer" class=""></footer>

  </body>
</html>
