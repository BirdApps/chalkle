<html>
  <head>
    <%= analytics_init if Rails.env.production? %>
    <meta charset='utf-8' />

    <meta name="viewport" content="width=device-width, user-scalable=no">

    <title>
      <%= content_for?(:title) ? yield(:title) : 'chalkleÂ°' %>
    </title>
    <link rel='shortcut icon' type='image/x-icon' href='/favicon.ico' />
    <%= csrf_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all" %>

    <%= javascript_include_tag "application" %>

    <script type="text/javascript" src="//use.typekit.net/hlu7uvf.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  </head>

  <body class="<%= body_class %> tk-proxima-nova">


    <header id="header" class="" >
      <h1 class="tk-proxima-nova" ><%=h @hero_text %></h1>
    </header>
    <nav class="" >
      <div class="grid-20 logo-container">
        <%= link_to image_tag( asset_path('partners/chalkle@2x.png'), width: 153, height: 38 ), :root %>
      </div>
      <div  class="grid-80">
        <%= render 'layouts/partners_navigation' %>
        </div>
      </div>
    </nav>

    <div id="">

      <div id="header-mask">
        <div class="mask"></div>
        <div class="arrows-mask-left"></div>
        <div class="arrows-mask-right"></div>
        <div class="mask"></div>
      </div>

      <div id="main">

        <div class="container">
          <%= render 'layouts/messages' %>
        </div>

        <%= yield %>

      </div>

      <footer id="footer" class=""></footer>

    </div> 


  </body>
</html>
