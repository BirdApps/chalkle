  <div class="outgoing_break_down">
    <div class="outgoing_course">
      <h4 class="flush upper">Courses and Bookings</h4>
      <br />
      <div class="row light">
        <div class="col-xs-2">
          ID
        </div>
        <div class="col-xs-4">
          NAME
        </div>
        <div class="col-xs-3">
          Fee 
        </div>
        <div class="col-xs-3">
          Tax
        </div>
      </div>
      <br />
      <% outgoing_payment.courses.each do |course|
        bookings = outgoing_payment.bookings.where(course_id: course.id).select{|b|b.paid?}
      %>
        <% if bookings.present? %>
          <div class="row">
            <div class="alert-success alert no-margin clearfix">
              <%= link_to course_path(course.id), target: :blank do %>
                <div class="col-xs-2">
                  <%= course.id %>
                </div>
                <div class="col-xs-4">
                  <%= course.name %>
                </div>
                <div class="col-xs-3">
                  $<%= bookings.inject(0){|sum,b| sum += ( outgoing_payment.for_teacher? ? b.teacher_fee : b.provider_fee ) } %> 
                </div>
                <div class="col-xs-3">
                  $<%= bookings.inject(0){|sum,b| sum += ( outgoing_payment.for_teacher? ? b.teacher_gst : b.provider_gst ) } %> 
                </div>
              <% end %>
            </div>
            <div class="clearfix">
              <% bookings.each do |booking | %>
                <% if booking.paid? && !booking.free? %>
                  <%= link_to ( current_user.super? ? sudo_booking_path(booking.id) : course_bookings_path(course.id)), target: :blank do %>
                    <div class="col-xs-2">
                      <%= booking.id %>
                    </div>
                    <div class="col-xs-4">
                      <%= booking.name %>
                    </div>
                    <div class="col-xs-3">
                      $<%= outgoing_payment.for_teacher? ? booking.teacher_fee : booking.provider_fee  %>
                    </div>
                    <div class="col-xs-3">
                      $<%= outgoing_payment.for_teacher? ? booking.teacher_gst : booking.provider_gst %>
                    </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>
            <br />
          </div>
        <% end %>
      <% end %>
    </div>
  </div>