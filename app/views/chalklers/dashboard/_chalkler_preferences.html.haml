= simple_form_for(:chalkers_preferences, url: chalklers_preferences_path, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :email_frequency, collection: Chalkler.email_frequency_select_options, include_blank: false
    = f.input :categories, as: :check_boxes, collection: Category.select_options, include_blank: false

  .form-actions
    = f.button :submit, 'Save Email Preferences', class: 'btn-primary'
