= simple_form_for(:chalkers_preferences, url: chalklers_preferences_path, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :email
    = f.input :email_frequency
    = f.input :categories, collection: Category.all

  .form-actions
    = f.button :submit, 'Submit', class: 'btn'
