= bootstrap_form_for(@course_suggestion, url: chalklers_course_suggestions_path, html: { class: 'form-vertical' }) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, label: 'What would the class be called?'
    = f.input :category_id, as: :select, label: 'Which category is the best fit for the class?', collection: Category.select_options

    = f.input :description, label: 'Please describe what you would like to happen in the class?', input_html: {rows: 3}
    - if current_chalkler.providers.size > 1
      %div.provider-selection
        = f.input :join_providers, as: :check_boxes, label: 'Which providers would you like to suggest this class for?', collection: current_chalkler.providers, input_html: {class: ''}
  .form-actions
    = f.button :submit, 'Suggest class', class: 'btn-primary'
