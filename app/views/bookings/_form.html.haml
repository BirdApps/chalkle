= simple_form_for(@booking, url: channel_lesson_bookings_path, html: { class: 'form-horizontal' }) do |f|
  %h3 Enter booking details
  = f.error_notification
  .form-inputs
    - if @lesson.cost? && @lesson.cost > 0
      = f.input :payment_method, :type => :select, collection: [['Cash', 'cash'], ['Bank Transfer', 'bank']]
    = f.input :guests, :type => :select, collection: 1..5
    = f.input :lesson_id, :as => :hidden, :input_html => { :value => @lesson.id }
    = "I agree with the #{link_to 'Booking Terms and Conditions', '#termsModal', :'data-toggle' => 'modal'}".html_safe
  .form-actions
    = f.button :submit, 'Confirm booking', class: 'btn-primary'
