<% count = 0 %>
<div class="col-xs-12 x1-25 clearfix light">
  <div class="col-xs-6 col-sm-4">
    Name
  </div>
  <div class="col-xs-6 col-sm-4 light">
    Amount Paid
  </div>
  <div class="col-xs-12 col-sm-4 light">
    Note to teacher
  </div>
</div> 
<% @course.bookings.each do |booking| %>
  <% count+=1 %>
  <div class="col-xs-12 x1-25 clearfix <%= count%2 ==0 ? 'even' : 'odd'  %>">
    <div class="col-xs-6 col-sm-4">
      <%= link_to booking.chalkler.name, chalkler_path(booking.chalkler.id) %>
    </div>
    <div class="col-xs-6 col-sm-4 light">
      <span class="inline vmid">
        $<%= booking.cost_formatted %>
      </span> 
    </div>
    <div class="col-xs-12 col-sm-4 light">
      <%= booking.note_to_teacher %>
    </div>
  </div> 
<% end %>