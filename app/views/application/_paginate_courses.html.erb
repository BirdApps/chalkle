<% 
  if @courses.empty?  
    problem = "No classes match "
    problem += '"'+params["provider"]+'" ' if params[:provider].present?
    problem += '"'+params["search"]+'" ' if params[:search].present?
  %>
  <div class="alert alert-warning center">
     <%= problem %>    
  </div>
<% end %>

<% if params['action'] == 'mine' %>
  <%= render partial: 'me/courses/course', collection: paginate_these(@courses) %>
<% elsif @provider %>
  <%= render partial: 'providers/course', collection: paginate_these(@courses) %>
<% else %>
  <%= render paginate_these(@courses) %>
<% end %>

<div class="pagination-wrapper">
  <ul class="pagination inline">
    <% if page_min > 0 %>
      <li>
        <a class="fetch_courses" data-page="<%= 1 %>" title="Page 1" data-toggle="tooltip" data-placement="top" onmouseover="$(this).tooltip('show')">&laquo;</a>
      </li>
    <% end %>
    <% (page_min..page_max).each do |i| %>
      <li class="<%= 'active' if paginate_position == i %>">
        <a class="fetch_courses" data-page="<%= i+1 %>" >
          <%= i+1 %> 
          <% if paginate_position == i %>
            <span class="sr-only">(current)</span>
          <% end %>
        </a>
      </li>
    <% end %>
    <% if paginate_count > page_max %>
      <li><a class="fetch_courses" data-page="<%= paginate_count+1 %>" title="Page <%= paginate_count+1 %>" data-toggle="tooltip" onmouseover="$(this).tooltip('show')" data-placement="top" >&raquo;</a></li>
    <% end %>
  </ul>
  
  <div class="paginate-take" data-take="<%= paginate_take %>">
    <div class="dropup btn btn-primary">
      <a id="paginateTakeLabel" data-target="#" data-toggle="dropdown" aria-haspopup="true" role="button" aria-expanded="false">
        Show <%= paginate_take %> Results
        <span class="caret"></span>
      </a>

      <ul class="dropdown-menu dropup" role="menu" aria-labelledby="paginateTakeLabel">
        <li><a class="fetch_courses" data-page="0" data-take="10">Show 10</a></li>
        <li><a class="fetch_courses" data-page="0" data-take="30">Show 30</a></li>
        <li><a class="fetch_courses" data-page="0" data-take="50">Show 50</a></li>
        <li><a class="fetch_courses" data-page="0" data-take="100">Show 100</a></li>
      </ul>
    </div>
  </div>
</div>