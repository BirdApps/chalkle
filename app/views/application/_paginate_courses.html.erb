<% 
  if @courses.empty?  
    problem = "No classes match "
    problem += '"'+params["region"]+'" ' if params[:region].present?
    problem += '"'+params["topic"]+'" ' if params[:topic].present?
    problem += '"'+params["provider"]+'" ' if params[:provider].present?
    problem += '"'+params["search"]+'" ' if params[:search].present?
  %>
  <div class="alert alert-warning center">
     <%= problem %>    
  </div>
<% else %>
  <%= render paginate_courses(@courses) %>
<% end %>

<div class="row text-right">
  <ul class="pagination">
    <li class="<%=  'disabled' if paginate_position == 0  %>">
      <a href="<%= root_path(filter_params('page', paginate_position)) %>">&laquo;</a>
    </li>
    <% paginate_count.times do |i| %>
      <li class="<%= 'active' if paginate_position == i %>">
        <a href="<%= root_path(filter_params('page', i+1)) %>">
          <%= i+1 %> 
          <% if paginate_position == i %>
            <span class="sr-only">(current)</span>
          <% end %>
        </a>
      </li>
    <% end %>
    <li class="<%= 'disabled' if paginate_position >= paginate_count-1 %>"><a href="<%= root_path(filter_params('page', paginate_position+2)) %>">&raquo;</a></li>
  </ul>
</div>