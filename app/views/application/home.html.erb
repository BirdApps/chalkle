<div id="home">
  <div class="providers-around-you row">
    <div class="col-xs-12 text-center">
      <h2>Amazing providers near you</h2>
    </div>


    <div class="col-xs-12 col-sm-8 col-sm-offset-2 location_form">
      <%= render partial: 'layouts/location', locals: { hide_prompt: true } %>
    </div>

    <div class="col-xs-12">
      <div id="home_fetch_wrapper"></div>
      <div class="provider-preview-loading text-center">
        <p>
          loading providers
        </p>
        <div class="location-spinner-wrapper"></div>
      </div>
    </div>

    <div class="provider-preview">
    </div>

  </div>

  <div class="row business">

    <h2 class="col-xs-12 text-center">A better world of learning</h2>

    <div class="row">
      <%= link_to learn_path do %>
        <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-1 teach-link">
          <div class="media">
            <div class="media-body">
              <h3>Learning</h3>
              <small>Learn new skills from teachers near you.</small>
            </div>
          </div>
        <% end %>
      </div>

      <%= link_to teach_path do %>
        <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-2 teach-link">
          <div class="media">
            <div class="media-body">
              <h3>Teaching & Organising</h3>
              <small>Dicover the tools to help you run great classes and grow a learning business.</small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row">
      <%= link_to resources_path do %>
        <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-1 teach-link">
          <div class="media">
            <div class="media-body">
              <h3>Sharing resources</h3>
              <small>Explore free resources to help you run great classes and support you to grow your learning business.</small>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-2 teach-link">
        <div class="media">
          <div class="media-body">
            <h3>Making a difference</h3>
            <small>Stories and reflections from the chalkle community.</small>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <%= link_to about_path do %>
        <div class="col-xs-10 col-xs-offset-1 col-sm-5 col-sm-offset-1 col-md-4 col-md-offset-1 teach-link">
          <div class="media">
            <div class="media-body">
              <h3>About Chalkle</h3>
              <small>Where did Chalkle come from?</small>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>

  <% unless current_user.authenticated? %>
    <div class="col-xs-12 text-center">
      <h2>What are you waiting for?</h2>
      <br />
      <%= link_to "Sign Up for Free", new_chalkler_registration_path, class: 'btn btn-primary btn-huge sign-up-first' %>
    </div>
    <div class="text-right col-xs-6">
        <%# link_to "learn more about putting your couses on chalkle", teach_path %>
    </div>
    <div class=" col-xs-6">
        <%# link_to "See all the courses in your area", classes_path %>
    </div>
  <% end %>
</div>
