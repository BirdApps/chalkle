<div class="row _featured_providers">
  <% @providers.limit(3).each do |provider| %>
    <div class="_featured_provider ">
      <div class="col-xs-12 flush">
        <%=  link_to provider_path(provider), class: 'avatar', style: "background-color: #{provider.header_color}" do %>
          <div class="img" style="background-image: url(<%= provider.logo %>)"></div>
        <% end %>

        <div class="details">
          <%= link_to limit_text(provider.name, 25), provider_path(provider), class: 'provider_name', title: provider.name %>
          <br />
          <%= render partial: 'providers/course', locals: { course: provider.next_class } %>
          
          <%# link_to limit_text(provider.next_class.name, 25), provider_course_path(provider.next_class.path_params), class: 'course_name', title: provider.next_class.name %>
        </div>
      </div>
    </div>
  <% end %>

  <%= link_to "Browse all providers", providers_path, class: 'btn btn-huge btn-default col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4' %>
</div>