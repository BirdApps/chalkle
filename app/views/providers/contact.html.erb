<div class="col-sm-3 hidden-xs"></div>
<div class="col-sm-6 new_form_wrapper">
  <div class="col-xs-12">
  <p class="center light">Send a message to the administrator of <%= @provider.name %></p>
  <br />
  </div>
  <%= bootstrap_form_for(@contact, wrapper: :simple_bootstrap3, class: 'form-horizontal', role: 'form', url: provider_contact_path(@contact.provider.url_name)) do |f| %>
    <% if !current_user.email.present? %>
      <%= f.input :from, label: "Email", input_html: { :'data-error-message' => 'You must write a email' }, wrapper: :horizontal %>
    <% end %>
    <%= f.input :subject, label: "Subject", collection: ['General Enquiry','Bookings','Courses','Teaching'], include_blank: false, wrapper: :horizontal %>
    <%= f.input :message, label: "Message", as: :text, wrapper: :horizontal %>
    <div class="col-sm-offset-5 col-sm-7">
      <input type="submit" name="submit" value="send" class="btn-primary btn" />
    </div>
  <% end %>
</div>
<div class="col-sm-3 hidden-xs"></div>