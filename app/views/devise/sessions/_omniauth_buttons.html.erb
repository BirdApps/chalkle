<% if devise_mapping.omniauthable? %>
  <div class="social-media-buttons">
    <% resource_class.omniauth_providers.each do |provider| %>
      <% unless params[:action] = "new" && provider.to_s.titleize == "Meetup" %>
        <div class="button_container">
          <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), class: "btn btn-social-media btn-#{provider} btn-large login" %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
