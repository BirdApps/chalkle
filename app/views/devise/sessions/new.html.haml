.row
  .col-md-7
    .content
      %h2 Sign in using social media
      %p Use your Meetup or Facebook account to sign in.
      = render partial: '/devise/sessions/omniauth_buttons'
  .col-md-5
    .well
      = bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'form' }) do |f|
        %h3.well-title Sign in with a password
        %p If you already have a password, you can sign in using your email address.
        = f.input :email, :required => false, :autofocus => true
        = f.input :password, :required => false
        .control-group
          .controls
            %label.checkbox
              = f.check_box :remember_me, :as => (:boolean if devise_mapping.rememberable?)
              Remember me?
        .sign-in-buttons
          = f.button :submit, "Sign in"
          = render "devise/shared/links"

