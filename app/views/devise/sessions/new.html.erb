<% @page_title = "Sign in" %>

<div class="row" id='sign-in'>
  

  <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-6 col-lg-offset-3 sign-in-wrapper">
    <h1 class="col-xs-12 col-md-10 col-md-offset-1">Welcome Back</h1>
    
    <h3 class="col-xs-12 col-md-12">Sign in</h3>


    <div class="content text-right clearfix col-xs-12 col-md-5 col-md-offset-1 col-xl-3 col-xl-offset-3">
      <%= render partial: '/devise/sessions/omniauth_buttons' %>
    </div>

    <div class="sign-in-form  col-xs-12 col-md-5 new_form_wrapper col-xl-3">
      <%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { class: 'form' }) do |f| %>
            <%= f.error_notification %>
            <%= f.input :email, :autofocus => true, placeholder: 'Email' %>
            <%= f.input :password, :required => true, placeholder: 'Password' %>
        <div class="control-group">
          <div class="controls">
            <label class="checkbox">
              <%= f.check_box :remember_me, :as => (:boolean if devise_mapping.rememberable?) %>
              Remember me?
            </label>
          </div>
        </div>
        <div class="sign-in-buttons">
          <input class="btn btn-primary" value="Sign in" type="submit" name="commit" />
          <div><%= render "devise/shared/links" %></div>
        </div>
      <% end %>
    </div>

  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h3>Not a member yet?</h3>
    <%= link_to new_chalkler_registration_path do %>
      <div class="under-button-alternatives">
        <h3>Join Chalkle Now</h3>
      </div>
    <% end %>

  </div>



  </div>





</div>
