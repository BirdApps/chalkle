<div class="row">
  <div class="span6">


    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {class: "form-horizontal"}) do |f| %>
    <legend>Sign in</legend>
    <p>If you already have a password, you can sign in using your email address.</p>
      <div class="form-inputs">
      <%= f.input :email, :required => false, :autofocus => true %>
      <%= f.input :password, :required => false %>
      <div class="control-group">
      <div class="controls">
      <label class="checkbox">
      <%= f.check_box :remember_me, :as => (:boolean if devise_mapping.rememberable?)%> Remember me?
      </label>
      </div>
      </div>
    </div>

    <div class="sign-in-buttons">
      <%= f.button :submit, "Sign in" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>

  </div>  
  <div class="span6 sign-in-meetup">
    <legend>Sign in using meetup</legend>
    <p>You can also simply use your meetup account to sign in.</p>
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="text-center">
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
        </div>
      <% end -%>
    <% end -%>
  </div>  
</div>
