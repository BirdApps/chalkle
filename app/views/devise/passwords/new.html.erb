<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <h2>Forgot your password?</h2>

  <%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :email, as: :email, :required => true, :autofocus => true %>
    </div>
    <p>If we already have an account with Chalkle you may reset your password here.</p>
    <div class="form-actions text-right">
      <%= f.button :submit, "Send me reset password instructions" %>
    </div>
  <% end %>

</div>