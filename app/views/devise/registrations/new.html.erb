<div id="sign-in" class="row">

  <div class="hidden-xs col-sm-6 col-md-7">
    <h1 class="light">Discover a World<br /> of Learning</h1>
  </div>

  <div class="col-xs-12 col-sm-5 col-md-4 sign-in-wrapper">
    <div class="col-xs-12 flush-xs">
      <div class="text-center">
        <%= bootstrap_form_for(Chalkler.new, as: :chalkler, url: registration_path(:chalkler)) do |f| %>
          <div class="segmented-rule hidden-xs">
            <div class="left-segment"></div>
            <h2>Sign Up</h2>
            <em class="text-center">it's free!</em>
            <div class="right-segment"></div>
          </div>
          <h2 class="visible-xs">Sign Up</h2>

          <br />
          <%= render partial: '/devise/sessions/omniauth_buttons' %>
        
          <h4>– Or –</h4>
          <br />
          
          <div class="form-inputs text-left">
            <%= f.input :name, :required => true, placeholder: 'Name' %>
            <%= f.input :email, as: :email, :required => true, placeholder: 'Email' %>
            <%= f.input :password, :required => true, placeholder: 'Password' %>
            <%= f.input :password_confirmation, :required => true, placeholder: 'Confirm Password' %>
          </div>
        
          <div class="col-xs-12 flush">

            <div class="col-xs-12 flush">
              <br class="visible-xs" />
              <button class="btn btn-lg btn-primary col-xs-12">
                Join Now
              </button>
            </div>

            <div class="col-xs-12">
              <br />
              <h5 class="alternative no-margin pad-top">Already signed up?</h5>
              <a href="<%= new_chalkler_session_path %>" class="link-line">Login now</a>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div> 

  <div class="col-xs-12 col-md-12" id="callout">
    <h4>Find out more</h4>
    about how chalkle works
  </div>

</div>

<div class="row">
  <div class="col-xs-12 col-md-6 feature-box" id="inspired">
    <h2>Be Inspired</h2>
    <p>Discover new things to learn delivered by a great network of teachers</p>
  </div>

  <div class="col-xs-12 col-md-6 feature-box" id="join">
    <h2>Join a class</h2>
    <p>Join classes and connect with other learners easily.</p>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-md-12 feature-box" id="abl">
    <div class="text col-xs-10 col-xs-offset-2">
      <h2>Always be learning</h2>
      <p>Enjoy meeting great people <br />and be inspired learning new skills</p>
    </div>
  </div>
</div>


<div class="sign-up-footer row">
    
  <h2 class="col-xs-12">Sign Up</h2>
  <div class="col-xs-12 text-center"><em>It's free</em></div>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 well">
    <%= render partial: '/devise/sessions/omniauth_buttons' %>
    <em class="text-center">Or sign in using an email address</em>

    <%= bootstrap_form_for(Chalkler.new, as: :chalkler, url: registration_path(:chalkler)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :name, :required => true, placeholder: 'Name' %>
        <%= f.input :email, :required => true, placeholder: 'Email' %>
        <%= f.input :password, :required => true, placeholder: 'Password' %>
        <%= f.input :password_confirmation, :required => true, placeholder: 'Confirm Password' %>
      </div>
      <div class="form-actions">
        <input type="submit" name="commit" class="btn btn-primary" value="Join Now" />
      </div>
    <% end %>
  </div>
</div>