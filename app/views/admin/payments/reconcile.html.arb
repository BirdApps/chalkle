@options = options_for_select(Booking.billable.confirmed.visible.unpaid.map{|b| next if b.chalkler.nil? || b.course.nil?; ["#{b.chalkler.name} - #{b.course.name}(#{b.course.meetup_id}) : #{b.course.start_at} : #{b.cost}", b.id]})

table_for assigns[:payments] do
  column :id
  column :date
  column :reference
  column :total
  column :xero_contact_name
  column "Booking" do |payment|
    render partial: 'reconcile_form', locals: {options: @options, payment: payment}
  end
end
