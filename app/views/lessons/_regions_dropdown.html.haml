%ul.dropdown-menu.pull-right.arrow-right
  %li.dropdown-entry
    = link_to_unless !filter.active?, filter.clear_name, filter_path(filter.name), class: 'dropdown-link', method: :delete do |name|
      %span.dropdown-link.dropdown-active= name
    - filter.options.each do |name, value, active|
      %li.dropdown-entry
        = link_to_unless active, name, filter_path(filter.name, value: value), class: 'dropdown-link', method: :put do |name|
          %span.dropdown-link.dropdown-active= name
