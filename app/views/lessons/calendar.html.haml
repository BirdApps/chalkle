.search_panel
  .container
    %ul.simple-nav#browse_type
      %li.active
        %a{:href => "#months", 'data-toggle' => "tab"}
          %i.icon-calendar
          Month View
      %li
        %a{:href => "#weeks", 'data-toggle' => "tab"}
          %i.icon-list
          Week View
    .tab-content
      #months.tab-pane.active
        = render partial: 'month_calendar_view', locals: {month: @month, lessons: @month_lessons}
      #weeks.tab-pane
        = render partial: 'week_calendar_view', locals: {week: @week, lessons: @week_lessons}
