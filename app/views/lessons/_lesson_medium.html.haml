.lesson_medium_container
  %a.lesson_medium{href: path_for_lesson(lesson), class: lesson_classes(lesson), id: dom_id(lesson)}
    %span.datetime>
      - time = lesson.start_at
      .parts
        .time
          %span.number= time.strftime('%l:%M').strip
          %span.am_pm= time.strftime('%p').strip
        .date
          %span.weekday= time.strftime('%a').strip
          %span.monthday= time.strftime('%-d %b').strip
    %span.image_container.coloured
      - if lesson.lesson_upload_image.present?
        = image_tag(lesson.lesson_upload_image.url(:medium), class: 'lesson_image')
      = category_image lesson, 150
    %span.details.blackboard>
      .inner
        .title_and_description
          .lesson_title<
            = lesson.name
          .description
            = lesson.description
        .footer
          %span.part
            = lesson_availability(lesson)
          %span.part.attendance
            = lesson_attendance(lesson)
    .channel
      = lesson.channels.first.name
