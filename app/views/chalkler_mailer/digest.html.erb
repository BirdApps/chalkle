<p>Hello #{@chalkler.name.split[0]},</p>
<p>Here is your chalkle&deg; #{@chalkler.email_frequency} digest for #{Date.current.strftime("%A %B #{Date.current.day.ordinalize}")}.</p>
<% if @new_courses.any? %>
  <h2>New classes:</h2>
  <table align="center" border="0" cellpadding="0" cellspacing="0" class="class-list">
    <% @new_courses.each do |course| %>
      <tr>
        <td>
          <h3>
            <%= link_to course.name.capitalize, course_url(course) %>
          </h3>
          <p class="details">
            <%= course.category_name %>
            <%= "| #{course.channel_name}" %>
            <%= "| Starts: #{course.start_at.strftime("%l:%M%p %a %B %d")}" if course.start_at %>
          </p>
          <p>
            <%= truncate(course.do_during_class, length: 250, separator: ' ') %>
          </p>
          <p>
            <%= link_to course.join_chalklers, course_url(course) %>
          </p>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<% if @open_courses.any? %>
  <h2>There is still time to sign up for these classes:</h2>
  <table align="center" border="0" cellpadding="0" cellspacing="0" class="class-list">
    <% @open_courses.each do |course| %>
      <tr>
        <td>
          <h3>
            <%= link_to course.name.capitalize, course_url(course) %>
          </h3>
          <p class="details">
            <%= course.category_name %>
            <%= "| #{course.channel_name}" %>
            <%= "| Starts: #{course.start_at.strftime("%l:%M%p %a %B %d")}" if course.start_at %>
          </p>
          <p>
            <%= truncate(course.do_during_class, length: 250, separator: ' ') %>
          </p>
          <p>
            <%= link_to course.join_chalklers, course_url(course) %>
          </p>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<% if @chalkler.channels.any? %>
  <p>
    <%= "See more classes from: #{@chalkler.channel_links}".html_safe %>
  </p>
<% end %>
<p id="signoff">Thank you for supporting chalkle&deg; and we look forward to seeing you soon!</p>
