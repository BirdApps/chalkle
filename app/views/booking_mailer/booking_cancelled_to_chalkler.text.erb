<%= 
   reason_text = @booking.cancelled_reason.present?  ? t("email.booking.cancelled.to_chalkler.reason")+"\"#{@booking.cancelled_reason}\"" : ""

    refund_text =  if @booking.pending_refund? 
      t("email.booking.cancelled.to_chalkler.refund") 
    else
      unless @booking.free? 
        t("email.booking.cancelled.to_chalkler.no_refund")
      else
        ""
      end
    end
    
     t("email.booking.cancelled.to_chalkler.body.text", root_name: t("chalkle_url"), root_url: root_url, reason: reason_text, refund: refund_text, course_name: @booking.course.name, course_url: tiny_course_url(@booking.course), provider_name: @booking.provider.name, provider_url: provider_url(@booking.provider.url_name)).to_html
%>