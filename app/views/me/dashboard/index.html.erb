<%  
  @page_title = current_user.name
  @page_subtitle = 'Dashboard'
  @page_title_logo = current_user.avatar
  following = current_chalkler.channels.order('name ASC')
  adminable = current_user.channels_adminable
  bookings = current_chalkler.bookings.limit(5)

  teaching = []
  current_chalkler.channel_teachers.each do |teacher|
    teaching = teaching + teacher.courses
  end
%>
<div class="row dashboard">
  <div class="col-xs-12 col-md-6">
      <% if bookings.present? %>
      <div class="fancy-header">
        <h3>Upcoming Bookings</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render bookings %>  
      </div>
    <% end %>

    <% if following.present? %>
      <div class="fancy-header">
        <h3>Following</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render following %>  
      </div>
    <% end %>
  </div>

  <div class="col-xs-12 col-md-6">
    <% if teaching.present? %>
      <div class="fancy-header">
        <h3>Classes you are Teaching</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render teaching %>  
      </div>
    <% end %>

   
     <% if current_chalkler.channel_teachers.present? %>
      <div class="fancy-header">
        <h3>Your Teacher Profiles</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render current_chalkler.channel_teachers %>  
      </div>
    <% end %>

   <% if adminable.present? %>
      <div class="fancy-header">
        <h3>Your Providers</h3>
        <hr />
      </div>
      <div class="row col-xs-12">
        <%= render adminable %>  
      </div>
    <% end %>

   

  </div>
</div>
